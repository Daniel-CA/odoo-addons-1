<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="payroll_import_xls_form_view">
            <field name="name">Payroll XLS import</field>
            <field name="model">payroll.import.xls</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Account payroll xls import">
                	<sheet>
	                    <group>
	                    	<field name="software"/>
	                        <field name="date" select="1"/>
	                        <field name="xls" select="1"/>
	                        <field name="state" />
	                        <button colspan="2" name="import_xls" string="Importar XLS" type="object" icon="terp-stock_format-scientific" states="draft"/>
	                        <field name="note" colspan="4"/>
	                    </group>
	                </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="payroll_import_xls_tree_view">
            <field name="name">Payroll XLS import</field>
            <field name="model">payroll.import.xls</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Account payroll xls import">
                    <field name="date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_payroll_import_xls_tree_view">
            <field name="name">Payroll XLS Import</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">payroll.import.xls</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="payroll_import_xls_tree_view"/>
        </record>
        
        <menuitem id="eco_import_xls_menu" name="Account payroll xls import" parent="account.menu_finance_accounting" action="action_payroll_import_xls_tree_view"/>
    </data>
</openerp>