<?xml version="1.0" encoding="utf-8"?>

    <odoo>
        <record id="view_company_construction_form" model="ir.ui.view">
            <field name="name">res.company.construction.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//notebook/page" position="after">
                    <page string="Construction" id="construction">
                        <field name="human_cost"/>
                        <field name="sign1"/>
                        <field name="sign2"/>
                    </page>
              </xpath>
            </field>
        </record>
    </odoo>