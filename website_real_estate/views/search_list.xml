<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		<template id="search_list" name="Search Top">
		    <t t-call="website.layout">
		    	<div class="hidden js_numbers">
					<span>2</span>
				</div>
				<div class="hidden invisible_tops_ids">
					<span t-esc="topids"/>
				</div>
				<div id="wrap">
					<div class="container listTop">
			    		<div class="filters_bar ">
			    			<t t-call="website_real_estate.search_list_filter"/>
			    			<div class="show" id="occultlistmap">
			    			<div class="selector_view col-md-12 text-center">
			    				<t t-if="page == 0">
		                        	 <form id="formsearch" action="/realestate/search" method="post">
									    <input type="hidden" name="operations" t-att-value="operation_sel"/>
									    <input type="hidden" name="category" t-att-value="category_sel"/>
									    <input type="hidden" name="city" t-att-value="city_sel"/>
									    <input type="hidden" name="zone" t-att-value="zone_sel"/>
									    <input type="hidden" name="salepricefrom" t-att-value="salepricefrom_def"/>
									    <input type="hidden" name="salepriceto" t-att-value="salepriceto_def"/>
									    <input type="hidden" name="rentpricefrom" t-att-value="rentpricefrom_def"/>
									    <input type="hidden" name="rentpriceto" t-att-value="rentpriceto_def"/>
									    <input type="hidden" name="areafrom" t-att-value="areafrom_def"/>
									    <input type="hidden" name="areato" t-att-value="areato_def"/>
									    <input type="hidden" name="reference" t-att-value="reference_def"/>
									    <a t-attf-href="/realestate/search">
									        <input type="submit" id="btnlist" value="list" />
									    </a>
									    
									</form>
									
									
									<form id="formsearchmap" action="/realestate/searchmap" method="post">
									    <input type="hidden" name="operations" t-att-value="operation_sel"/>
									    <input type="hidden" name="category" t-att-value="category_sel"/>
									    <input type="hidden" name="city" t-att-value="city_sel"/>
									    <input type="hidden" name="zone" t-att-value="zone_sel"/>
									    <input type="hidden" name="salepricefrom" t-att-value="salepricefrom_def"/>
									    <input type="hidden" name="salepriceto" t-att-value="salepriceto_def"/>
									    <input type="hidden" name="rentpricefrom" t-att-value="rentpricefrom_def"/>
									    <input type="hidden" name="rentpriceto" t-att-value="rentpriceto_def"/>
									    <input type="hidden" name="areafrom" t-att-value="areafrom_def"/>
									    <input type="hidden" name="areato" t-att-value="areato_def"/>
									    <input type="hidden" name="reference" t-att-value="reference_def"/>
									    <a t-attf-href="/realestate/searchmap">
									        <input type="submit" id="btnmap" value="map" />
									    </a>
									    
									</form>
		                        </t>
		                        <t t-if="page != 0">
		                        	<form id="formsearchpage" action="/realestate/search" method="post">
									    <input type="hidden" name="operations" t-att-value="operation_sel"/>
									    <input type="hidden" name="category" t-att-value="category_sel"/>
									    <input type="hidden" name="city" t-att-value="city_sel"/>
									    <input type="hidden" name="zone" t-att-value="zone_sel"/>
									    <input type="hidden" name="salepricefrom" t-att-value="salepricefrom_def"/>
									    <input type="hidden" name="salepriceto" t-att-value="salepriceto_def"/>
									    <input type="hidden" name="rentpricefrom" t-att-value="rentpricefrom_def"/>
									    <input type="hidden" name="rentpriceto" t-att-value="rentpriceto_def"/>
									    <input type="hidden" name="areafrom" t-att-value="areafrom_def"/>
									    <input type="hidden" name="areato" t-att-value="areato_def"/>
									    <input type="hidden" name="reference" t-att-value="reference_def"/>
									    <a t-attf-href="/realestate/search/page/{{page}}">
									        <input type="submit" id="btnlist" value="list" />
									    </a>
									    
									</form>
									
									
									<form id="formsearchmappage" action="/realestate/searchmap" method="post">
									    <input type="hidden" name="operations" t-att-value="operation_sel"/>
									    <input type="hidden" name="category" t-att-value="category_sel"/>
									    <input type="hidden" name="city" t-att-value="city_sel"/>
									    <input type="hidden" name="zone" t-att-value="zone_sel"/>
									    <input type="hidden" name="salepricefrom" t-att-value="salepricefrom_def"/>
									    <input type="hidden" name="salepriceto" t-att-value="salepriceto_def"/>
									    <input type="hidden" name="rentpricefrom" t-att-value="rentpricefrom_def"/>
									    <input type="hidden" name="rentpriceto" t-att-value="rentpriceto_def"/>
									    <input type="hidden" name="areafrom" t-att-value="areafrom_def"/>
									    <input type="hidden" name="areato" t-att-value="areato_def"/>
									    <input type="hidden" name="reference" t-att-value="reference_def"/>
									    <a t-attf-href="/realestate/searchmap/page/{{page}}">
									        <input type="submit" id="btnmap" value="map" />
									    </a>
									    
									</form>
		                        </t>
			    			</div>
			    			</div>
			    			<div class="separator_enumerator col-md-12">
			    				<p>PROPERTIES  <span class="number_tops"/></p>
			    				<hr id="separator1"></hr>
			    			</div>
			    		</div>
			    		<div class="tops_and_maps">
			    			<div class="tops_list">
			    				<t t-foreach="top" t-as="topdatas">
			    					<div class="top-search-list col-md-3 col-sm-6">
			    						<t t-call="website_real_estate.top_reduced"/>
			    					</div>
						  		</t>
			    			</div>
			    		</div>
				  		<div class="products_pager col-md-12 col-sm-12 col-xs-12">
			              <t t-call="website.pager"/>
			            </div>
			    	</div>
			   	</div>
		    </t>
	    </template>

		<template id="top_reduced_three" name="Tops List Three Columns" inherit_id="website_real_estate.search_list" customize_show="True" active="False">
			<div class="top-search-list col-md-3 col-sm-6" position="attributes">
				<attribute name="class">top-search-list col-md-4 col-sm-6</attribute>
			</div>
		</template>
	
		<template id="top_reduced_two" name="Tops List Two Columns" inherit_id="website_real_estate.search_list" customize_show="True" active="False">
			<div class="top-search-list col-md-3 col-sm-6" position="attributes">
				<attribute name="class">top-search-list col-md-6 col-sm-12</attribute>
			</div>
		</template>

	    <template id="search_list_filter">
			<div class="top_filters col-md-12">
   				<div class="titles_searchbar row">
					<div class="title1 col-md-6 col-sm-6 col-xs-6">
						<h4>Tops seeker</h4>
				    </div>
				    <div class="title2 col-md-6 col-sm-6 col-xs-6">
				        <h4>Find all you need</h4>
				    </div>
				</div>
				<div class="hidden ocultbutton" id="searchclick-div">
					<button type="button" class="btn btn-info" id='searchclick'>Search</button>
				</div>
				<div class="attributes_searchbar row">
					<form action="/realestate/search" method="post" id="topSearch">
						<div class="operation col-md-2">
							<select name="operations" id="operations">
	  							<option id="touch" value="operation" selected="selected" t-if="operation_sel == 'operation'">Operation</option>
								<t t-foreach="operations" t-as="topoperations">
									<option id="touch" t-att-value="topoperations[0]" selected="selected" t-if="topoperations[0] == operation_sel"><span t-esc="topoperations[1]" /></option>
									<option id="touch" t-att-value="topoperations[0]" t-if="topoperations[0] != operation_sel"><span t-esc="topoperations[1]" /></option>
		  						</t>
							</select>
						</div>
						<div class="category col-md-2">
							<select name="category" id="categories">
	  							<option value="category" selected="selected" t-if="category_sel == 'category'">Category</option>
								<t t-foreach="type1" t-as="toptype">
	  								<option t-att-value="toptype[0]" selected="selected" t-if="toptype[0] == category_sel"><span t-esc="toptype[1]"/></option>
	  								<option t-att-value="toptype[0]" t-if="toptype[0] != category_sel"><span t-esc="toptype[1]"/></option>
	  							</t>
							</select>
						</div>
						<div class="city col-md-2">
							<select name="city" onchange="this.form.submit()">
	  							<option value="city" selected="selected" t-if="city_sel == 'city'">Location</option>
								<t t-foreach="cities" t-as="topcity">
	  								<option t-att-value="topcity[1]" selected="selected" t-if="topcity[1] == city_sel"><span t-esc="topcity[0]"/></option>
	  								<option t-att-value="topcity[1]" t-if="topcity[1] != city_sel"><span t-esc="topcity[0]"/></option>
	  							</t>
							</select>
						</div>
						<div class="zone col-md-2">
							<select name="zone">
	  							<option value="zone" selected="selected" t-if="zone_sel == 'zone'">Zone</option>
	  							<t t-foreach="zone" t-as="topzones">
									<option t-att-value="topzones.id" selected="selected" t-if="topzones.id == zone_sel"><span t-field="topzones.name"/></option>
									<option t-att-value="topzones.id" t-if="topzones.id != zone_sel"><span t-field="topzones.name"/></option>
	  							</t>
							</select>
						</div>
						<t t-if="operation_sel in ['sale', 'sale_rent', 'rent_sale_option', 'transfer']">
							<div class="show salepricefrom col-md-2">
								<input id="spf" type="text" name="salepricefrom" t-att-value="salepricefrom_def" t-if="salepricefrom_def != 0"/>
								<input id="spf" type="text" name="salepricefrom" placeholder="Sale price from" t-if="salepricefrom_def == 0"/>
							</div>
							<div class="show salepriceto col-md-2">
								<input id="spt" type="text" name="salepriceto" t-att-value="salepriceto_def" t-if="salepriceto_def != 0"/>
								<input id="spt" type="text" name="salepriceto" placeholder="Sale price to" t-if="salepriceto_def == 0"/>
							</div>
						</t>
						<t t-else="">
							<div class="hidden salepricefrom col-md-2">
								<input id="spf" type="text" name="salepricefrom" t-att-value="salepricefrom_def" t-if="salepricefrom_def != 0"/>
								<input id="spf" type="text" name="salepricefrom" placeholder="Sale price from" t-if="salepricefrom_def == 0"/>
							</div>
							<div class="hidden salepriceto col-md-2">
								<input id="spt" type="text" name="salepriceto" t-att-value="salepriceto_def" t-if="salepriceto_def != 0"/>
								<input id="spt" type="text" name="salepriceto" placeholder="Sale price to" t-if="salepriceto_def == 0"/>
							</div>
						</t>
						<t t-if="operation_sel in ['rent', 'sale_rent', 'rent_sale_option']">
							<div class="show rentpricefrom col-md-2">
								<input id="rpf" type="text" name="rentpricefrom" t-att-value="rentpricefrom_def" t-if="rentpricefrom_def != 0"/>
								<input id="rpf" type="text" name="rentpricefrom" placeholder="Rent price from" t-if="rentpricefrom_def == 0"/>
							</div>
							<div class="show rentpriceto col-md-2">
								<input id="rpt" type="text" name="rentpriceto" t-att-value="rentpriceto_def" t-if="rentpriceto_def != 0"/>
								<input id="rpt" type="text" name="rentpriceto" placeholder="Rent price to" t-if="rentpriceto_def == 0"/>
							</div>
						</t>
						<t t-else="">
							<div class="hidden rentpricefrom col-md-2">
								<input id="rpf" type="text" name="rentpricefrom" t-att-value="rentpricefrom_def" t-if="rentpricefrom_def != 0"/>
								<input id="rpf" type="text" name="rentpricefrom" placeholder="Rent price from" t-if="rentpricefrom_def == 0"/>
							</div>
							<div class="hidden rentpriceto col-md-2">
								<input id="rpt" type="text" name="rentpriceto" t-att-value="rentpriceto_def" t-if="rentpriceto_def != 0"/>
								<input id="rpt" type="text" name="rentpriceto" placeholder="Rent price to" t-if="rentpriceto_def == 0"/>
							</div>
						</t>
						<div class="areafrom col-md-2">
							<input id="af" type="text" name="areafrom" t-att-value="areafrom_def" t-if="areafrom_def != 0"/>
							<input id="af" type="text" name="areafrom" placeholder="Area from" t-if="areafrom_def == 0"/>
						</div>
						<div class="areato col-md-2">
							<input id="at" type="text" name="areato" t-att-value="areato_def" t-if="areato_def != 0"/>
							<input id="at" type="text" name="areato" placeholder="Area to" t-if="areato_def == 0"/>
						</div>
						<div class="reference col-md-2">
							<input id="refer" type="text" name="reference" t-att-value="reference_def" t-if="reference_def != 'reference'"/>
							<input id="refer" type="text" name="reference" placeholder="Reference" t-if="reference_def == 'reference'"/>
						</div>
						<div class="btnsearch col-md-2">
							<input type="submit" id="btnSearch" value="Search" />
						</div>
					</form>
				</div>
				<div class="hidden advanced_searchbar row">
					<a href="" class="advanced_search1">Advanced Search</a>
				</div>
   			</div>
	    </template>
	    
		<template id="search_list_adv" customize_show="True" name="Advanced Search List" inherit_id="search_list">
			<div class="tops_list" position="before">
				<t t-call="website_real_estate.search_advanced"/>
			</div>
			<div class="tops_list" position="attributes">
				<attribute name="class">tops_list col-md-9</attribute>
			</div>
		</template>
	    
	</data>
</odoo>